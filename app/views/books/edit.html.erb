<%= form_for @book, url: user_book_path(@book.user_id, @book) do |f| %>

 <%= f.hidden_field :user_id, value: current_user.id %>
 <%= f.hidden_field :book_id, value: @book.id %>

 <%= f.label :condition %>
 <%= f.text_field :condition, {:html => name="title"} %>
 <br>
 <%= f.label :description %>
 <%= f.text_field :description, {:html => name="author"} %>
 <br>
 <%= f.label :price %>
 <%= f.text_field :price, {:html => name="volume_number"} %>
 <br>
 <%= f.submit 'Edit Book' %>
 <% end %>
