<%= form_for @book do |f| %>
<% binding.pry %>
<%= collection_select(:book, :title, Book.all, :id, :title)%>
  <%= f.hidden_field :owner_id, value: current_user.id %>

 <%= f.fields_for :user_book_attributes do |userbook_builder| %>
 <%= userbook_builder.hidden_field :user_id, value: current_user.id %>


 <%= userbook_builder.label :condition %>
 <%= userbook_builder.text_field :condition %>
 <br>
 <%= userbook_builder.label :description %>
 <%= userbook_builder.text_field :description %>
 <br>
 <%= userbook_builder.label :price %>
 <%= userbook_builder.text_field :price %>
 <br>
 <%= f.submit 'Add Book' %>
 <% end %>
 <% end %>
