<h1>Welcome to your Collection, <%= current_user.name %></h1>
<% binding.pry %>
<% if current_user.user_books == [] %>
<%= "You don't have any books yet!" %>
<% else %>
<h3>Here are all of your books</h3>
<ul>
  <%= @books.map.with_index(1) do |book, i| %>
<strong><%= i %></strong>

   <li>Book Title: <%= book.title %></li>
   <li>Book Author: <%= book.author %></li>
    <%= link_to 'View My Copy', user_book_path(id: book.id) %>
   <br>

<hr>
  <% end %>
<% end %>
<br>
<%= link_to 'Add a New Book', new_user_book_path(current_user) %>

<br>
<%= link_to 'Back to My Profile', user_path(current_user) %>
</ul>
